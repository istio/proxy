    name = "values_go_proto",
    compilers = [
        "@io_bazel_rules_go//proto:gogofaster_proto",
    ],
    importpath = "github.com/bazelbuild/rules_go/examples/proto/gogo",
    proto = ":values_proto",
)

go_test(
    name = "gogo_test",
    srcs = ["gogo_test.go"],
    deps = [
        ":values_go_proto",
    ],
)
