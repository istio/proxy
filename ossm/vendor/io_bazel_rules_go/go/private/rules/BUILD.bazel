bzl_library(
    name = "test",
    srcs = ["test.bzl"],
    visibility = [
        "//docs:__subpackages__",
        "//go:__subpackages__",
    ],
    deps = [
        "//go/private:common",
        "//go/private:context",
        "//go/private:mode",
        "//go/private:providers",
        "//go/private/rules:binary",
        "//go/private/rules:transition",
        "@bazel_skylib//lib:structs",
    ],
