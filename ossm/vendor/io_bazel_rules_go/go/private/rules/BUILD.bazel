    deps = [
        "//go/private:context",
        "//go/private:providers",
        "//go/private/rules:transition",
    ],
)

bzl_library(
    name = "sdk",
    srcs = ["sdk.bzl"],
    visibility = ["//go:__subpackages__"],
    deps = ["//go/private:providers"],
)

bzl_library(
    name = "source",
    srcs = ["source.bzl"],
    visibility = [
        "//docs:__subpackages__",
        "//go:__subpackages__",
    ],
    deps = [
        "//go/private:context",
        "//go/private:providers",
    ],
